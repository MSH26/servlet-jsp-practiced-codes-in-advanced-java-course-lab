<?xml version="1.0" encoding="UTF-8"?>

<web-app>

	<servlet>
		<servlet-name>GlobalController</servlet-name>
		<servlet-class>controller.MVC.GlobalController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>GlobalController</servlet-name>
		<url-pattern>/controller/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>GlobalController</servlet-name>
		<servlet-class>controller.MVC.LoginController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>GlobalController</servlet-name>
		<url-pattern>/account/login</url-pattern>
	</servlet-mapping>
	
</web-app>